{
  "expo": {
    "name": "Toda-Go",
    "slug": "Toda-Go",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/pic1.png",
    "scheme": "myapp",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSCameraUsageDescription": "This app uses the camera to take profile pictures.",
        "NSPhotoLibraryUsageDescription": "This app needs access to your photo library to upload profile photos."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/TODA_Go.gif",
        "backgroundColor": "#ffffff"
      },
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "ACCESS_BACKGROUND_LOCATION",
        "INTERNET",
        "CAMERA", 
        "READ_EXTERNAL_STORAGE", 
        "WRITE_EXTERNAL_STORAGE"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/TODA_Go.gif"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/TODA_Go.gif",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "white"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "splash": {
      "image": "./assets/images/pic1.png", 
      "resizeMode": "contain",
      "backgroundColor": "white"
    }
  }
}
